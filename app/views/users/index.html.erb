<%# loop across all users and show them with variable friend request buttons %>


<div class="column is-2 is-offset-5">
  <div class="box">
    <table class="table">
      <% if params[:mode] == "accepted" %>
        <thead>Friends</thead>
      <% else %>
        <thead>Request a friend</thead>
      <% end %>
      
      <% @users.each do |user| %>
        <% unless current_user == user %>
          
              <% if params[:mode] == "accepted" %>
                <% if current_user.requestStatus(user) == "accepted" %>
                <tr>
                  <td>
                    <div class="span"><%= user.name %></div>
                  </td>
          
                  <td>
                    <span class="icon">
                      <i class="fa-solid fa-user-check"></i>
                    </span>
                  </td>
                </tr>
                <% end %>

              <% else %>
                <% if current_user.requestStatus(user) == "pending" %>
                  <tr>
                    <td>
                      <div class="span"><%= user.name %></div>
                    </td>
          
                    <td>
                      <span class="icon">
                        <i class="fa-solid fa-clock"></i>
                      </span>
                    </td>
                  </tr>

                <% elsif current_user.requestStatus(user) == "accepted" %>
                  <%= p "this is not a thing" %>

                <% else %>
                  <tr>
                    <td>
                      <div class="span"><%= user.name %></div>
                    </td>
          
                    <td>
                      <%# <%= button_to current_user.friendRequest(user), class: "button" do %>
                      <%= button_to friendRequest_path(:id => user.id) do %>
                      Add Friend
                      <span>
                        <i class="fa-solid fa-user-plus"></i>
                      </span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
