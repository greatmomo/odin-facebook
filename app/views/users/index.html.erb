<%# loop across all users and show them with variable friend request buttons %>

<div class="column is-2 is-offset-5">
  <h2 class="title is-3">Friends</h2>
  <div class="box">
    <ul>
      <% @users.each do |user| %>
        <% unless current_user == user %>
          <li>
            <%= user.name %>
            <% if current_user.requested?(user) %>
              <span class="icon">
                <i class="fa-solid fa-user-check"></i>
              </span>
              <span class="icon">
                <i class="fa-solid fa-clock"></i>
              </span>
            <% else %>
              <%# Show the correct icon based on friend request status %>
              <span class="icon">
                <i class="fa-solid fa-user-plus"></i>
              </span>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
