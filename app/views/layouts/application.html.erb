<!DOCTYPE html>
<html>
  <head>
    <title>Odin Facebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="https://github.com/greatmomo">
          <%= image_tag("GitHub-Mark-32px.png") %>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item">
            Some Option
          </a>
        </div>

        <div class="navbar-end">
          <% if user_signed_in? %>
        <%# Make this whole thing only available if logged in! %>
          <div class="navbar-item">
            <div class="buttons">
              <%= button_to "find friends", get_users_path, class:"button is-primary" %>
              <%= button_to "logout", destroy_user_session_path, method: :delete, class:"button is-light" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
