<%# loop across all friend requests and show them with variable friend request buttons %>


<div class="column is-2 is-offset-5">
  <div class="box">
    <table class="table">
      <thead>Friend Requests</thead>
      <% @friendRequests.each do |fr| %>
        <% if current_user == fr.receiver %>
          <tr>
            <td>
              <div class="span"><%= fr.requester.name %></div>
            </td>
    
            <td>
              <%= button_to current_user.acceptRequest(fr) do %>
                <div class="button">
                  <span>
                    Accept
                  </span>
                </div>
              <% end %>
            </td>

            <td>
              <%= button_to current_user.denyRequest(fr) do %>
                <div class="button">
                  <span>
                    Deny
                  </span>
                </div>
              <% end %>
            </td>

          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
